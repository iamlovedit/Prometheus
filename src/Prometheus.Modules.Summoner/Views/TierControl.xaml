<UserControl
    x:Class="Prometheus.Modules.Summoner.Views.TierControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Prometheus.Modules.Summoner.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="Root"
    d:DesignHeight="120"
    d:DesignWidth="100"
    mc:Ignorable="d">
    <StackPanel HorizontalAlignment="Center">
        <Image
            Width="80"
            Height="80"
            Source="{Binding ElementName=Root, Path=TierImage}"
            Stretch="UniformToFill" />
        <TextBlock
            Margin="0,12,0,8"
            HorizontalAlignment="Center"
            Foreground="White"
            Text="{Binding ElementName=Root, Path=Tier}" />

        <TextBlock
            Margin="0,12,0,8"
            HorizontalAlignment="Center"
            Foreground="White"
            Text="{Binding ElementName=Root, Path=TierType}" />
    </StackPanel>
</UserControl>
