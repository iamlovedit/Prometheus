<UserControl
    x:Class="Prometheus.Modules.Setting.Views.SettingView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:core="clr-namespace:Prometheus.Core;assembly=Prometheus.Core"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:viewmodels="clr-namespace:Prometheus.Modules.Setting.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:SettingViewModel}"
    d:DesignHeight="600"
    d:DesignWidth="400"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Prometheus.Core;component/Resources/GlobalResource.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <!--<TabControl>
        <TabItem Header="{DynamicResource Setting.Generic}">
        <hc:PropertyGrid SelectedObject="{Binding DemoModel}" />
        </TabItem>
        <TabItem Header="{DynamicResource Setting.Preference}">
            <hc:PropertyGrid SelectedObject="{Binding PreferenceSetting}" />

        </TabItem>
        <TabItem Header="{DynamicResource Setting.System}">
            <hc:PropertyGrid SelectedObject="{Binding SystemSetting}" />
        </TabItem>
    </TabControl>-->
    <TabControl prism:RegionManager.RegionName="{x:Static core:RegionNames.SettingTabRegion}">
        <TabControl.ItemTemplate>
            <DataTemplate>
                <TextBlock Text="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=TabItem}, Path=Content.DataContext.Title}" />
            </DataTemplate>
        </TabControl.ItemTemplate>
    </TabControl>
</UserControl>
