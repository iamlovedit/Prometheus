<UserControl
    x:Class="Prometheus.Shared.Views.TierControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="Root"
    d:DesignHeight="150"
    d:DesignWidth="120"
    mc:Ignorable="d">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Bottom">
        <Image
            Width="100"
            Height="100"
            Source="{Binding ElementName=Root, Path=TierImage}"
            Stretch="UniformToFill" />
        <TextBlock
            Margin="0,0,0,8"
            HorizontalAlignment="Center"
            Foreground="White">
            <Run Text="{Binding ElementName=Root, Path=Tier}" />
            <Run Text=" " />
            <Run Text="{Binding ElementName=Root, Path=Division}" />
        </TextBlock>
        <TextBlock
            HorizontalAlignment="Center"
            Foreground="White"
            Text="{Binding ElementName=Root, Path=TierType}" />
    </StackPanel>
</UserControl>
