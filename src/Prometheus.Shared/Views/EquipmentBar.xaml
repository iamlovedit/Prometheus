<UserControl
    x:Class="Prometheus.Shared.Views.EquipmentBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:Prometheus.Shared.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="Root"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style TargetType="{x:Type Image}">
            <Setter Property="Stretch" Value="UniformToFill" />
            <Setter Property="Width" Value="32" />
            <Setter Property="Height" Value="32" />
        </Style>
    </UserControl.Resources>
    <hc:UniformSpacingPanel
        HorizontalSpacing="2"
        ItemVerticalAlignment="Center"
        Orientation="Horizontal">
        <Image Source="{Binding ElementName=Root, Path=Item0Icon}" />
        <Image Source="{Binding ElementName=Root, Path=Item1Icon}" />
        <Image Source="{Binding ElementName=Root, Path=Item2Icon}" />
        <Image Source="{Binding ElementName=Root, Path=Item3Icon}" />
        <Image Source="{Binding ElementName=Root, Path=Item4Icon}" />
        <Image Source="{Binding ElementName=Root, Path=Item5Icon}" />
        <Image Source="{Binding ElementName=Root, Path=Item6Icon}" />
    </hc:UniformSpacingPanel>
</UserControl>
